<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magestore_FeatureProduct::css/owl.carousel.min.css" />
        <css src="Magestore_FeatureProduct::css/owl.theme.default.min.css" />
    </head>
    <body>
        <referenceContainer name="right">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.sidebar.right.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-right-top</argument>
                </action>
            </block>
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.sidebar.right.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-right-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.sidebar.left.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-left-top</argument>
                </action>
            </block>
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.sidebar.left.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">sidebar-left-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.page.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">page-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.content.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">content-top</argument>
                </action>
            </block>
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.note.all.site" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPositionNote" />
            </block>
        </referenceContainer>
        <referenceBlock name="header.container">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.menu.top"  before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">menu-top</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="page.top">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.menu.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">menu-bottom</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>