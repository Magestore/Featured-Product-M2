<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magestore_FeatureProduct::css/owl.carousel.min.css" />
        <css src="Magestore_FeatureProduct::css/owl.theme.default.min.css" />
    </head>
    <body>
        <referenceContainer name="right">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.sidebar.right.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-right-top</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-sidebar-right-top</argument>
                </action>
            </block>
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.sidebar.right.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-right-bottom</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-sidebar-right-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.sidebar.left.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-left-top</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-sidebar-left-top</argument>
                </action>
            </block>
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.sidebar.left.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-sidebar-left-bottom</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-sidebar-left-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.page.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-page-bottom</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-page-bottom</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.content.top" before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-content-top</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-content-top</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceBlock name="header.container">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.menu.top"  before="-" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-menu-top</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-menu-top</argument>
                </action>
            </block>
        </referenceBlock>
        <referenceBlock name="page.top">
            <block class="Magestore\FeatureProduct\Block\FeatureProduct" name="featureproduct.catalog.menu.bottom" template="Magestore_FeatureProduct::featureproduct.phtml">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">catalog-menu-bottom</argument>
                </action>
                <action method="setCategoryPosition">
                    <argument name="position" xsi:type="string">category-menu-bottom</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>